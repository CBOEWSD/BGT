
<div class="widget-tv row {{#each classes}} {{this}} {{/each}}"
  data-subscribe="{{subscribe}}"
  {{#if activeStates}}data-activestates="true"{{/if}}>

  {{#if title}}
    <div class="title">
      <h2>
        {{{title}}}

        {{#if total}}
          <span>
            ({{{total}}})
          </span>
        {{/if}}
      </h2>

      {{#with viewall}}
        <a href="{{#if href}}{{{href}}}{{else}}#{{/if}}" class="viewall {{#if expand}}button expand{{/if}}">
          {{#if text}}
            {{{text}}}
          {{else}}
            Expand
          {{/if}}
        </a>
      {{/with}}
    </div>
  {{/if}}

  <div class="items">
    {{#each items}}
    <div class="item {{#if active}} active {{/if}}">
      <a href="{{this.url}}">
        <div class="image">
          <img
            src="/ui/assets/images/placeholders/blank.gif"
            data-echo="{{this.thumbnail.src}}"
            alt="{{#if thumbnail.alt}}{{thumbnail.alt}}{{else}}{{this.title}}{{/if}}"
          >
          <noscript>
            <img
              src="{{this.thumbnail.src}}"
              alt="{{#if thumbnail.alt}}{{thumbnail.alt}}{{else}}{{this.title}}{{/if}}">
          </noscript>
        </div>

        {{#if this.meta}}
          <div class="meta">
            {{#if this.meta.views}}
              <span class="icon-meta views">
                {{this.meta.views}}
              </span>
            {{/if}}
            {{#if this.meta.likes}}
              <span class="icon-meta likes">
                {{this.meta.likes}}
              </span>
            {{/if}}
          </div>
        {{/if}}

        <h3>
          {{{this.title}}}
        </h3>

        {{#if this.description}}
        <p>
          {{{this.description}}}
        </p>
        {{/if}}
      </a>
    </div>
    {{/each}}
  </div>

  <div class="showWithAll">
    {{> widgets/pagination/pagination}}
  </div>
</div>