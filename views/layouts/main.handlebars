<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>{{title}} - Starter Application</title>
  {{#meta}}
    {{#keywords}}<meta name="keywords" content="{{this}}" >{{/keywords}}
    {{#description}}<meta name="description" content="{{this}}" >{{/description}}
  {{/meta}}

  <link href="/stylesheets/basic.css" media="all" rel="stylesheet" type="text/css">
</head>
<body>

  {{{body}}}

  <script src="/lib/jquery/jquery.js"></script>
  <script src="/init/init.js"></script>

  <!-- START - Load Qunit tests when required -->
  <script>
  (function () {
    var url = window.location.href,
        test = (url.indexOf('#test=on') !== -1) ? true : false;

    if (test) {
      document.write('<script src="http://code.jquery.com/qunit/qunit-1.12.0.js"\></script\>');
      document.write('<link href="http://code.jquery.com/qunit/qunit-1.12.0.css" media="all" rel="stylesheet" type="text/css"\>');
    }
  }).call(this);
  </script>
  <!-- END - Qunit -->
</body>
</html>
