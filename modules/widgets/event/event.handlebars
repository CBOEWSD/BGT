<section class="event">
  {{#if title}}
    <h2>
      {{{title}}}
    </h2>
  {{/if}}

  {{#if meta}}
  <ul class="">
    {{#each meta}}
    <li>
      <strong>{{this.title}}:</strong>
      <span>{{this.value}}</span>
    </li>
    {{/each}}
  </ul>
  {{/if}}

  {{#if policy}}
  <dl>
    {{#each policy}}
    <dt>
      {{{this.title}}}:
    </dt>
    <dd>
      {{#each this.description}}
       <p>
         {{{this}}}
       </p>
      {{else}}
        {{this.description}}
      {{/each}}
    </dd>
    {{/each}}
  </dl>
  {{/if}}

</section>