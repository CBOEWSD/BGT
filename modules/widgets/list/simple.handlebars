{{> widgets/widget-title}}

<div class="widget-list simple {{#each this.classes}} {{this}} {{/each}}">
  <ul>
    {{#each items}}

      <li class="{{#each this.classes}} {{this}} {{/each}}">
        {{#if this.link}}
          <a href="{{this.link.url}}" title="{{this.title}}">
        {{/if}}

        {{#if this.thumbnail}}
          <img src="/ui/assets/images/placeholders/blank.gif" data-echo="{{this.thumbnail.src}}" alt="{{this.title}}" class="thumbnail">
        {{/if}}

        <h2 class="title">
          {{this.title}}
        </h2>

        {{#if this.meta}}
        <strong class="meta">
          {{#if this.meta.location}}
            {{this.meta.location}}:
          {{/if}}
          {{#if this.meta.date}}
            {{this.meta.date}}
          {{/if}}
        </strong>
        {{/if}}

        {{#if this.description}}
          <p>
            {{{this.description}}}
          </p>
        {{/if}}

        {{#if this.link}}
          </a>
        {{/if}}
      </li>

    {{/each}}
  </ul>
</div>