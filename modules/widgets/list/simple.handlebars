<div class="widget-list simple {{#each this.classes}} {{this}} {{/each}} {{#if showad}} showad {{/if}}">
  {{> widgets/widget-title}}

  <ul>
    {{#each items}}

      <li class="{{#each this.classes}} {{this}} {{/each}}">
        {{#if this.link}}
          <a href="{{this.link.url}}" title="{{this.title}}">
        {{/if}}

        {{#if this.thumbnail}}
          <img
            src="/ui/assets/images/placeholders/blank.gif"
            data-echo="{{this.thumbnail.src}}"
            alt="{{this.title}}"
            class="thumbnail {{#each this.thumbnail.classes}} {{this}} {{/each}}">
            <noscript>
              <img
                src="{{this.thumbnail.src}}"
                alt="{{this.title}}"
                class="thumbnail {{#each this.thumbnail.classes}} {{this}} {{/each}}">
            </noscript>
        {{/if}}

        {{#if this.title}}
        <h2 class="title">
          {{this.title}}
        </h2>
        {{/if}}

        {{#if this.meta}}
        <strong class="meta">
          {{{this.meta}}}
        </strong>
        {{/if}}

        {{#if this.description}}
          <p>
            {{{this.description}}}
          </p>
        {{/if}}

        {{#if this.link}}
          </a>
        {{/if}}
      </li>

    {{/each}}
  </ul>

  {{#if showad}}
    <div class="ad">
      {{> ads/square_300/block}}
    </div>
  {{/if}}
</div>