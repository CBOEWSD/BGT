
{{#if search}}
<form class="search">
  <strong>Search {{search.title}}:</strong>

  <div class="input">
    <input type="text" placeholder="Search {{search.title}}..." name="search-sidebar">
    <button type="submit" class="icon-search-only">Search</button>
  </div>

  <label>
    Search within results:
    <input type="checkbox" name="within">
  </label>
</form>
{{/if}}